    "version": "0.2.0",
    "configurations": [
        {
            "name": "Simple Example",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/builddir/examples/example_simple",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/builddir",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": {
                "type": "meson",
                "mode": "build"
            },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
